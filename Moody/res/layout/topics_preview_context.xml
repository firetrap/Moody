    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/course_description_relative_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fill_light_grey"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/imageButtonTESTE1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:contentDescription="@string/arrow_description"
            android:paddingRight="5dp"
            android:src="@drawable/right_arrow" />

        <TextView
            android:id="@+id/topic_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_course_context"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/topic_string" />

        <TextView
            android:id="@+id/content_preview_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/topic_name"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/imageButtonTESTE1"
            android:text="@string/content_preview" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:layout_alignBottom="@id/content_preview_textView"
            android:layout_marginBottom="-10dp"
            android:background="@drawable/border_inside" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@color/C_White" />
    </RelativeLayout>