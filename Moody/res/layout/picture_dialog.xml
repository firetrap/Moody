<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:divider="@android:color/darker_gray"
    android:dividerPadding="2dp"
    android:orientation="vertical"
    android:showDividers="beginning"
    tools:context="activities.MainActivity" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <Button
        android:id="@+id/upload_from_gallery_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:drawableLeft="@drawable/ic_action_picture"
        android:drawablePadding="5dp"
        android:onClick="getActivity().onClick()"
        android:paddingLeft="10dp"
        android:text="@string/upload_from_gallery" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <Button
        android:id="@+id/upload_from_camera_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:drawableLeft="@drawable/ic_action_camera"
        android:drawablePadding="5dp"
        android:paddingLeft="10dp"
        android:text="@string/upload_from_camera" />



</LinearLayout>