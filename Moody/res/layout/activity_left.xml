<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/left_drawer"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="left"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:id="@+id/linear_layout_inside_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:divider="@android:color/darker_gray"
            android:orientation="vertical"
            android:showDividers="beginning|middle|end" >

            <RelativeLayout
                android:id="@+id/buttons_relative_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.25"
                android:background="@color/C_White"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/logout_image_button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/border_shape"
                    android:contentDescription="@string/login_image"
                    android:onClick="onClick"
                    android:scaleType="fitXY"
                    android:src="@drawable/logout" />

                <ImageButton
                    android:id="@+id/login_image_button"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/border_shape"
                    android:contentDescription="@string/login_image"
                    android:onClick="onClick"
                    android:padding="2dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/no_logon" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/login_image_button"
                    android:layout_marginBottom="13dp"
                    android:layout_marginLeft="14dp"
                    android:layout_toRightOf="@+id/login_image_button"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:text="@string/fullName_textView" />
            </RelativeLayout>

            <TextView
                android:id="@+id/courses_TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.25"
                android:linksClickable="false"
                android:paddingBottom="5dp"
                android:paddingTop="10dp"
                android:text="@string/courses_TextView_string" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_weight="1.25"
                android:background="@android:color/darker_gray" />

            <!-- <ListView -->
            <!-- android:id="@+id/left_list_viewer" -->
            <!-- android:layout_width="wrap_content" -->
            <!-- android:layout_height="wrap_content" -->
            <!-- android:background="@android:color/white" -->
            <!-- android:choiceMode="singleChoice" -->
            <!-- android:divider="@android:color/darker_gray" -->
            <!-- android:dividerHeight="1dp" -->
            <!-- android:footerDividersEnabled="false" -->
            <!-- android:headerDividersEnabled="false" -->
            <!-- android:paddingBottom="2dp" -->
            <!-- android:paddingLeft="2dp" -->
            <!-- android:paddingTop="2dp" > -->
            <!-- </ListView> -->

            <TextView
                android:id="@+id/navigation_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.25"
                android:linksClickable="false"
                android:paddingBottom="5dp"
                android:paddingTop="10dp"
                android:text="@string/navigation_string" />

            <View
                android:id="@+id/view1"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_weight="1.25"
                android:background="@android:color/darker_gray" />

            <Button
                android:id="@+id/latest_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.25"
                android:background="@drawable/border_inside"
                android:drawableLeft="@drawable/latest"
                android:drawablePadding="10dp"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:text="@string/latest" />

            <Button
                android:id="@+id/favorites_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.25"
                android:background="@drawable/border_inside"
                android:drawableLeft="@drawable/favorites"
                android:drawablePadding="10dp"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:text="@string/favorites" />

            <Button
                android:id="@+id/cloud_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.25"
                android:background="@drawable/border_inside"
                android:drawableLeft="@drawable/cloud"
                android:drawablePadding="10dp"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:text="@string/cloud" />

            <Button
                android:id="@+id/wiki_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.25"
                android:background="@drawable/border_inside"
                android:drawableLeft="@drawable/wiki"
                android:drawablePadding="10dp"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:text="@string/wiki" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>