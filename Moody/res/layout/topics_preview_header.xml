<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/topics_header_relative_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/C_White"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/course_path_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_weight="1"
        android:background="@color/C_White"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"
        android:text="@string/course_path"
        android:textColor="@android:color/darker_gray" />

    <ImageButton
        android:id="@+id/add_favorites_button_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_weight="1"
        android:adjustViewBounds="false"
        android:background="@android:color/transparent"
        android:contentDescription="@string/add_favorite_description"
        android:cropToPadding="false"
        android:onClick="onContentPreviewClick"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/add_favorites" />

</LinearLayout>