<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/fill_light_grey"
    android:orientation="horizontal" >


<TextView
        android:id="@+id/topic_path_textView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/C_White"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"
        android:text="@string/course_path"
        android:textColor="@color/C_Blue_Light" />

<TextView
    android:id="@+id/textView1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/topic_path_textView"
    android:layout_centerHorizontal="true"
    android:text="@string/topic_title" />

</RelativeLayout>